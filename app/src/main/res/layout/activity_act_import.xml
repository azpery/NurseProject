<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="darkvador.androidprojet3_delaporte.ActImport"
    android:background="@color/button_material_light">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importer les patients."
        android:id="@+id/testcon"
        android:layout_alignParentTop="true"
        android:theme="@android:style/Animation"
        style="@style/AppTheme"
        android:background="@color/background_material_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/testcon"
        android:layout_alignLeft="@+id/testcon"
        android:layout_alignStart="@+id/testcon"
        android:layout_marginTop="39dp"
        android:layout_alignRight="@+id/testcon"
        android:layout_alignEnd="@+id/testcon"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tV"
        android:layout_below="@+id/testcon"
        android:layout_alignLeft="@+id/testcon"
        android:layout_alignStart="@+id/testcon"
        android:layout_marginTop="143dp"
        android:layout_alignRight="@+id/testcon"
        android:layout_alignEnd="@+id/testcon"
        android:visibility="gone"/>

</RelativeLayout>
